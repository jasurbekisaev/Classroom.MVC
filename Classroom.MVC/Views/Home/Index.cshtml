<div class="row col-lg-12 col-md-12 col-sm-12 gap-3 d-flex justify-content-center">


    @for (var i = 0; i < Model.Count; i++)
    {
        var school = Model[i];

        <div class="card" style="width: 30%;box-shadow: 0 0rem 3rem rgba(8,7,16,0.6)!important;">
            <img src="@school.LogoUrl" class="card-img-top" alt="RASM">
            <div class="card-body">
                <h4 class="card-title">Name: @school.Name</h4>
                <h5>Users Count: @school.UserSchools?.Count</h5>
                <p class="card-text">Description: @school.Description</p>
                @if (User.HasClaim(claim => claim.Type == ClaimTypes.NameIdentifier))
                {
                    <a class="btn btn-primary" asp-controller="Schools" asp-action="GetSchoolById" asp-route-id="@school.Id">
                        Show School
                    </a>
                }
                else
                {
                    <a class="btn btn-primary" asp-controller="Users" asp-action="SignUp">
                        Show School
                    </a>
                }
            </div>
        </div>
    }
</div>
